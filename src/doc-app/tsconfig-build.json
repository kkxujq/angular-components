// TypeScript config file that is used to compile the demo-app. Target environment will be ES5,
// since the demo-app will be served in the browser.
{
  "compilerOptions": {
    // Needed for Moment.js since it doesn't have a default export.
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "lib": ["es6", "es2015", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/packages/doc-app",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": false,
    "typeRoots": [
      "../../node_modules/@types/!(node)"
    ],
    "baseUrl": ".",
    "paths": {
      "get-ui-ng/*": ["../../dist/packages/get-ui-ng/*"],
      "get-ui-ng": ["../../dist/packages/get-ui-ng/public-api"]
    }
  },
  "files": [
    "./typings.d.ts",
    "./app.module.ts",
    "./system-config.ts",
    "./main.ts"
  ]
}
